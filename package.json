{
  "name": "loxberry-plugin-klf200",
  "version": "1.0.20",
  "description": "LoxBerry plugin to bridge Velux KLF-200 gateway to MQTT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "daemon": "node dist/daemon.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "clean": "rm -rf dist",
    "package": "npm run build && ./scripts/package.sh"
  },
  "keywords": [
    "loxberry",
    "velux",
    "klf-200",
    "klf200",
    "mqtt",
    "loxone",
    "home-automation",
    "io-homecontrol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "klf-200-api": "^3.2.2",
    "mqtt": "^5.10.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/*.test.ts"],
    "collectCoverageFrom": ["src/**/*.ts"],
    "coverageDirectory": "coverage"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
