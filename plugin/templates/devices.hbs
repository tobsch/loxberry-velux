<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">
            Discovered Devices
            <span class="badge">{{deviceCount}}</span>
        </h3>
    </div>
    <div class="panel-body">
        {{#if devices.length}}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Node ID</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Position</th>
                        <th>Status</th>
                        <th>Last Update</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each devices}}
                    <tr>
                        <td>{{nodeId}}</td>
                        <td>{{name}}</td>
                        <td>
                            <span class="label label-info">{{type}}</span>
                        </td>
                        <td>
                            <div class="progress" style="margin-bottom: 0; min-width: 100px;">
                                <div class="progress-bar" role="progressbar"
                                     style="width: {{position}}%;"
                                     aria-valuenow="{{position}}" aria-valuemin="0" aria-valuemax="100">
                                    {{position}}%
                                </div>
                            </div>
                        </td>
                        <td>
                            {{#if moving}}
                            <span class="label label-warning"><i class="fa fa-arrows-v"></i> Moving</span>
                            {{else if online}}
                            <span class="label label-success"><i class="fa fa-check"></i> Online</span>
                            {{else}}
                            <span class="label label-danger"><i class="fa fa-times"></i> Offline</span>
                            {{/if}}
                        </td>
                        <td>{{lastUpdate}}</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <button type="button" class="btn btn-success device-cmd"
                                        data-nodeid="{{nodeId}}" data-cmd="open" title="Open">
                                    <i class="fa fa-arrow-up"></i>
                                </button>
                                <button type="button" class="btn btn-warning device-cmd"
                                        data-nodeid="{{nodeId}}" data-cmd="stop" title="Stop">
                                    <i class="fa fa-stop"></i>
                                </button>
                                <button type="button" class="btn btn-danger device-cmd"
                                        data-nodeid="{{nodeId}}" data-cmd="close" title="Close">
                                    <i class="fa fa-arrow-down"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="alert alert-info">
            <i class="fa fa-info-circle"></i>
            No devices discovered yet. Make sure the service is running and connected to your KLF-200.
        </div>
        {{/if}}
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">MQTT Topics</h3>
    </div>
    <div class="panel-body">
        <p>Use these MQTT topics to control your devices:</p>
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Purpose</th>
                    <th>Topic</th>
                    <th>Payload</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Read position</td>
                    <td><code>klf200/devices/{nodeId}/position</code></td>
                    <td>0-100</td>
                </tr>
                <tr>
                    <td>Set position</td>
                    <td><code>klf200/devices/{nodeId}/position/set</code></td>
                    <td>0-100</td>
                </tr>
                <tr>
                    <td>Send command</td>
                    <td><code>klf200/devices/{nodeId}/cmd</code></td>
                    <td>open, close, stop, 0-100</td>
                </tr>
                <tr>
                    <td>Moving status</td>
                    <td><code>klf200/devices/{nodeId}/moving</code></td>
                    <td>true/false</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="form-group">
    <button type="button" class="btn btn-primary" id="refreshDevices">
        <i class="fa fa-refresh"></i> Refresh Devices
    </button>
    <a href="/admin/express/plugins/klf200/" class="btn btn-default">
        <i class="fa fa-cog"></i> Back to Settings
    </a>
</div>

<script>
$(document).ready(function() {
    // Device commands (these require MQTT, so we'll just show a message for now)
    $('.device-cmd').click(function() {
        var nodeId = $(this).data('nodeid');
        var cmd = $(this).data('cmd');
        alert('Command "' + cmd + '" for device ' + nodeId + ' would be sent via MQTT.\n\nTopic: klf200/devices/' + nodeId + '/cmd\nPayload: ' + cmd);
    });

    // Refresh devices
    $('#refreshDevices').click(function() {
        location.reload();
    });
});
</script>
